<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_View_songName"
        android:gravity="center"
        android:layout_below="@+id/text_View_singerName"
        android:layout_toRightOf="@+id/image_view"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="artistName"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/image_view"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    
    <TextView
        android:id="@+id/text_View_singerName"
        android:gravity="center"
        android:layout_toRightOf="@+id/image_view"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="songName"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/image_view"
        android:layout_marginLeft="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />



    <TextView
        android:id="@+id/text_view_generic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="generic"
        android:layout_toRightOf="@+id/text_View_songName"
        android:layout_below="@+id/text_View_singerName"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="36dp"
        app:layout_constraintRight_toRightOf="parent" />



</android.support.constraint.ConstraintLayout>